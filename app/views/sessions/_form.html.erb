<div class="email-password-area col-xs-12 large col-sm-12">
  <div class="header">
    <span>Log in or <%= link_to "Create Account", sign_up_path %></span>
  </div>
  <%= form_for :session, url: session_path, html: {class: "login-form form-horizontal"} do |form| %>
    <div class="form-group group-email">
      <%= form.label :email, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= form.text_field :email, type: 'email', class: "form-control", id: "session-email" %>
      </div>
    </div>

    <div class="form-group group-password">
      <%= form.label :password, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= form.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="submit-field">
      <%= form.submit %>
      <%= button_tag "â€œ" %>
    </div>

    <div class="other-links">
      <%= link_to "Sign up", sign_up_path %>
    </div>
  <% end %>
</div>